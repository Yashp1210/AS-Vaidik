<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeamActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/teamtool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <com.google.android.material.textview.MaterialTextView
            style="bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingEnd="16dp"
            android:text="Team"
            android:textColor="@color/white"
            android:textSize="21sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="14dp" />


    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/teamview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teamtool">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/image"
                android:src="@drawable/man" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img1"
                android:layout_alignStart="@+id/img1"
                android:layout_alignEnd="@+id/img1"
                android:gravity="center"
                android:text="Pratik\nAndorid Developer"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@id/img1"
                android:contentDescription="@string/image"
                android:src="@drawable/man" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img2"
                android:layout_alignStart="@+id/img2"
                android:layout_alignEnd="@+id/img2"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="Tushar\nAndorid Developer"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_below="@+id/textView9"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/image"
                android:src="@drawable/man" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img3"
                android:layout_alignStart="@+id/img3"
                android:layout_alignEnd="@+id/img3"
                android:gravity="center"
                android:text="Yash\nAndorid Developer"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/img4"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_below="@+id/textView15"
                android:layout_marginStart="13dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@id/img3"
                android:contentDescription="@string/image"
                android:src="@drawable/man" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img4"
                android:layout_alignStart="@+id/img4"
                android:layout_alignEnd="@+id/img4"
                android:gravity="center"
                android:text="Pankaj\nAndorid Developer"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/img5"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_below="@+id/textView11"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/image"
                android:src="@drawable/man" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img5"
                android:layout_alignStart="@+id/img5"
                android:layout_alignEnd="@+id/img5"
                android:gravity="center"
                android:text="Tejas\nUI Designer"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/img6"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_below="@+id/textView16"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@id/img5"
                android:contentDescription="@string/image"
                android:src="@drawable/man" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img6"
                android:layout_alignStart="@+id/img6"
                android:layout_alignEnd="@+id/img6"
                android:gravity="center"
                android:text="Roy\nUI Designer"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/img7"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_below="@+id/textView12"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/image"
                android:src="@drawable/man" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img7"
                android:layout_alignStart="@+id/img7"
                android:layout_alignEnd="@+id/img5"
                android:gravity="center"
                android:text="Syed\nWeb Developer"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/img8"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_below="@+id/textView17"
                android:layout_marginStart="5dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@id/img7"
                android:contentDescription="@string/image"
                android:src="@drawable/woman" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img8"
                android:layout_alignStart="@+id/img6"
                android:layout_alignEnd="@+id/img8"
                android:gravity="center"
                android:text="Tanshri\nWeb Developer"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/img9"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_below="@+id/textView13"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/image"
                android:src="@drawable/woman" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img9"
                android:layout_alignStart="@+id/img9"
                android:layout_alignEnd="@+id/img9"
                android:gravity="center"
                android:text="Sheetal\nWeb Developer"
                android:textColor="#000000" />

        </RelativeLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeamActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/teamtool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <com.google.android.material.textview.MaterialTextView
            style="bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/maitree_medium"
            android:gravity="center"
            android:paddingEnd="16dp"
            android:text="Team"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="14dp" />


    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/teamview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teamtool">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/image"
                android:src="@drawable/temlogo" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@id/img1"
                android:contentDescription="@string/image"
                android:src="@drawable/temlogo" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_below="@id/img1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/image"
                android:src="@drawable/temlogo" />

            <ImageView
                android:id="@+id/img4"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_below="@id/img2"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@id/img3"
                android:contentDescription="@string/image"
                android:src="@drawable/temlogo" />

            <ImageView
                android:id="@+id/img5"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_below="@id/img3"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/image"
                android:src="@drawable/temlogo" />

            <ImageView
                android:id="@+id/img6"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_below="@id/img4"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@id/img5"
                android:contentDescription="@string/image"
                android:src="@drawable/temlogo" />

        </RelativeLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
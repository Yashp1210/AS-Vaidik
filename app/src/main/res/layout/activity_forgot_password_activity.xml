<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ForgotPasswordActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/forgot_pass"
        android:layout_margin="8dp"
        android:padding="8dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/text_normal" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_forgot_password"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:hint="Email Address"
            android:inputType="textEmailAddress"/>
    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/submit_btn"
        android:background="@color/white"
        android:clickable="true"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/did_not_receive_email"
        android:layout_margin="8dp"/>

    <ImageButton
        android:id="@+id/resend_link_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/resend_password_link"
        android:background="@color/white"
        android:clickable="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/text_view_normal"
        android:layout_margin="8dp"/>

    <ImageButton
        android:id="@+id/sign_up_for_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/sign_up_btn"
        android:background="@color/white"
        android:clickable="true" />

</LinearLayout>